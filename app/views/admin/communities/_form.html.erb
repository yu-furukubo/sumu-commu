<div class="ml-5 mb-3">
  <%= form_with model:community, url: path, local: true do |f| %>
    <div class="ml-5">
      <%= render 'layouts/errors', obj: community %>
    </div>
    <table class="table table-borderless">
      <tbody>
        <div class="form-group">
          <tr>
            <td>居住地</td>
            <td><%= residence.name %></td>
            <%= f.hidden_field :residence_id, :value => residence.id %>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td style="width: 20%"><%= f.label :コミュニティ名 %></td>
            <td style="width: 70%"><%= f.text_field :name, placeholder: "件名", class: 'form-control ' %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td><%= f.label :本文 %></td>
            <td><%= f.text_area :description, placeholder: "コミュニティの説明を記述します", class: 'form-control', rows: "5" %></td>
          </tr>
        </div>
      </tbody>
    </table>
    <div class="form-group text-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>