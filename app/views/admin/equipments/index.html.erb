<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class="col-3">
      <%= render 'layouts/residence_search', residences: @residences %>
    </div>
    <div class='col-md-9'>
      <div class="row ml-5 mb-3">
        <h2>備品一覧</h2>
        <%= link_to ">> 設備一覧へ", admin_facilities_path %>
        <div class="ml-auto">
          <table><tr>
          <%= form_with model: Equipment, url: new_admin_equipment_path, method: :get, local: true do |f| %>
            <td><%=
              f.select :residence_id,
              options_from_collection_for_select(current_admin.residences, :id, :name), {prompt: "選択してください"},
              required: true,
              class: 'form-control'
            %></td>
            <td><%= f.submit "選択した居住地に備品を登録", class: 'btn btn-sm btn-success' %></td>
          <% end %>
          </tr></table>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="offset-1">
            <%= render 'admin/equipments/index', equipments: @equipments %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>