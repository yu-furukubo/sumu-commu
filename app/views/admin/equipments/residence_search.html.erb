<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class="col-3">
      <%= render 'layouts/residence_search', residences: @residences %>
    </div>
    <div class='col-md-9'>
      <div class="row mr-3 mb-3">
        <h2><%= @residence.name %>の備品一覧</h2>
        <div class="ml-auto">
          <%= form_with model: Equipment, url: new_admin_equipment_path, method: :get, local: true do |f| %>
              <%= f.hidden_field :residence_id, :value => params[:id] %>
              <%= f.submit ">> "+@residence.name+"の備品を登録", class: 'btn btn-sm btn-success' %>
          <% end %>
        </div>
      </div>
      <div class="container">
        <div class="ml-3">
          <%= render 'admin/equipments/index', equipments: @equipments %>
        </div>
      </div>
     </div>
  </div>
</div>