<table class='table table-borderless'>
  <thead>
    <tr>
      <th>作成者</th>
      <th>品名</th>
      <th style="width:13%">費用</th>
      <th>掲載期限</th>
      <th style="width:13%">募集状況</th>
    </tr>
  </thead>
  <tbody>
    <% exchanges.each do |exchange| %>
      <tr>
        <td><%= exchange.member.name %></td>
        <td><%= link_to exchange.name, admin_residence_exchange_path(params[:residence_id], exchange) %></td>
        <td>
          <% if exchange.price == 0 %>
            無償
          <% else %>
            <%= exchange.price.to_s(:delimited) %>円
          <% end %>
        </td>
        <td>
          <% if exchange.deadline.present? %>
            <%= l exchange.deadline %>
          <% else %>
            なし
          <% end %>
        </td>
        <% if exchange.deadline.present? && exchange.deadline < Time.now %>
          <td class="text-secondary">掲載期限終了</td>
        <% else %>
          <% if exchange.is_finished == false %>
            <td class="text-success">募集中</td>
          <% else %>
            <td class="text-secondary">募集終了</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>