<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="ml-5 mb-3">
        <h2>ゆずりあい詳細</h2>
      </div>
      <div class="container">
        <div class="offset-1">
          <table class='table table-borderless'>
            <tr>
              <th>画像</th>
              <td>
                <% if @exchange.exchange_item_images.attached? %>
                  <% @exchange.exchange_item_images.each do |image| %>
                    <%= image_tag image, width: '100px' %>
                  <% end %>
                <% else %>
                  <%= image_tag 'no_image.jpg', width: '50px' %>
                <% end %>
              </td>
            </tr>
            <tr><th style="width: 20%">作成者名</th><td><%= @exchange.member.name %></td></tr>
            <tr><th>居住地</th><td><%= @exchange.residence.name %></td></tr>
            <tr><th>品名</th><td><%= @exchange.name %></td></tr>
            <tr><th>説明</th><td><%= @exchange.description %></td></tr>
            <tr>
              <th>費用</th>
              <% if @exchange.price == 0 %>
                <td>無償</td>
              <% else %>
                <td><%= @exchange.price.to_s(:delimited) %>円</td>
              <% end %>
            </tr>
            <tr><th>掲載期限</th><td><%= @exchange.deadline %></td></tr>
            <tr>
              <th>募集状況</th>
              <% if @exchange.is_finished == false %>
                <td class="text-success">募集中</td>
              <% else %>
                <td class="text-secondary">募集終了</td>
              <% end %>
            </tr>
          </table>

          <div class="row">
            <div class="mx-auto">
              <%= link_to "編集する", edit_admin_exchange_path, class: "btn btn-success" %>&emsp;&emsp;
              <%= link_to "削除する", admin_exchange_path, method: :delete,
                data: {confirm:'本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
            </div>
          </div>

          <!--コメント表示用の記述-->
          <div class="col-6 mt-5">
            <div class="row mb-3 d-flex align-items-center">
              <h4>コメント</h4>&emsp;
              <span class="text-primary font-weight-bold"><%= @exchange_comments.count %>件</span>
            </div>
            <table class='table table-borderless'>
              <tbody>
                <% @exchange_comments.each do |exchange_comment| %>
                  <tr>
                    <td style="width: 35%"><%= exchange_comment.member.name %></td>
                    <td><%= exchange_comment.comment %></td>
                    <td>
                      <%= link_to admin_exchange_exchange_comment_path(@exchange, exchange_comment), method: :delete, class: 'btn btn-sm btn-secondary' do %>
                        <i class="fa-solid fa-trash-can fa-2xs"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!--コメント表示用の記述ここまで-->
        </div>
      </div>
     </div>
  </div>
</div>