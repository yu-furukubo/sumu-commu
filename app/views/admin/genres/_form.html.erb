<%= form_with model:genre, url: admin_genres_path, local: true do |f| %>
  <%= render 'layouts/errors', obj: genre %>
  <div class="form-group align-items-center">
    <table class="table table-borderless">
      <div class="form-group">
        <tr>
          <td><%= f.label :所在地 %></td>
          <td>
            <% if params[:id].present? %>
              <%= Residence.find(params[:id]).name %>
              <%= f.hidden_field :residence_id, :value => Residence.find(params[:id]).id %>
            <% else %>
              <%= f.select :residence_id,
              options_from_collection_for_select(current_admin.residences, :id, :name), {prompt: "選択してください"},
              class: 'form-control' %>
            <% end %>
          </td>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <td style="width: 20%"><%= f.label :ジャンル名 %></td>
          <td style="width: 70%"><%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control ' %></td>
        </tr>
      </div>
    </table>
    <div class="form-group text-center">
      <% if genre.new_record? %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% else %>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
<% end %>