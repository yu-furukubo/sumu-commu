<table class='table table-bordered'>
  <thead>
    <tr>
      <th style="width: 30%">所在地</th>
      <th>ジャンル名</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.residence.name %></td>
        <td><%= genre.name %></td>
        <td class="table-borderless text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
        <td class="table-borderless text-center"><%= link_to "削除する", admin_genre_path(genre), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>