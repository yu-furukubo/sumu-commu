<table class='table table-borderless'>
  <thead>
    <tr>
      <th>ジャンル名</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <% if genre.is_deleted == false %>
          <td><%= genre.name %></td>
          <td class="table-borderless text-center"><%= link_to "編集する", edit_admin_residence_genre_path(params[:residence_id], genre), class: 'btn btn-sm btn-success' %></td>
          <td>
            <%= form_with model: Genre.new, url: admin_residence_genre_path(params[:residence_id], genre), method: :patch, local: true do |f| %>
              <%= f.hidden_field :is_deleted, :value => true %>
              <%= f.submit "削除", class: 'btn btn-sm btn-danger' %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>