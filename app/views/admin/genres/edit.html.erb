<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1 mb-5'>
      <div class="ml-5 mb-3">
        <h2>ジャンル編集</h2>
      </div>
      <div class="col-md-6 mx-auto">
        <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
          <%= render 'layouts/errors', obj: @genre %>
          <div class="form-group">
            <%= f.label :ジャンル名 %>
            <%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control genre_name' %>
          </div>
          <div class="form-group">
            <div class="mx-auto">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>