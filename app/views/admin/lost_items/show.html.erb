<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="ml-5 mb-3">
        <h2>落とし物詳細</h2>
      </div>
      <div class="container">
        <div class="offset-1">
          <table class='table table-borderless'>
            <tr><th>居住地</th><td><%= @lost_item.residence.name %></td></tr>
            <tr>
              <th>画像</th>
              <td>
                <% if @lost_item.lost_item_images.attached? %>
                  <% @lost_item.lost_item_images.each do |image| %>
                    <%= image_tag image, width: '100px' %>
                  <% end %>
                <% else %>
                  <%= image_tag 'no_image_obj.png', width: '50px' %>
                <% end %>
              </td>
            </tr>
            <tr><th style="width: 20%">作成者名</th><td><%= check_member_created(@lost_item) %></td></tr>
            <tr><th>落とし物名</th><td><%= @lost_item.name %></td></tr>
            <tr><th>説明</th><td><%= @lost_item.description %></td></tr>
            <tr><th>拾った場所</th><td><%= @lost_item.picked_up_location %></td></tr>
            <tr><th>拾った日時</th><td><%= l @lost_item.picked_up_at %></td></tr>
            <tr><th>保管場所</th><td><%= @lost_item.storage_location %></td></tr>
            <% if @lost_item.deadline.present? %>
              <tr><th>掲載期限</th><td><%= l @lost_item.deadline %></td></tr>
            <% end %>
            <tr>
              <th>保管状況</th>
              <% if @lost_item.is_finished == false %>
                <td class="text-success">保管中</td>
              <% else %>
                <td class="text-secondary">保管終了</td>
              <% end %>
            </tr>
          </table>

          <div class="row">
            <div class="mx-auto">
              <%= link_to "編集する", edit_admin_lost_item_path, class: "btn btn-success" %>&emsp;&emsp;
              <%= link_to "削除する", admin_lost_item_path, method: :delete,
                data: {confirm:'本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
            </div>
          </div>

          <!--コメント表示用の記述-->
          <div class="mt-5">
            <div class="row mb-3 d-flex align-items-center">
              <h4>コメント</h4>&emsp;
              <span class="text-primary font-weight-bold"><%= @lost_item_comments.count %>件</span>
              <% if @lost_item_comments_deleted.count != 0 %>
                <span>(削除済み<%= @lost_item_comments_deleted.count %>件)</span>
              <% end %>
            </div>
            <table class='table table-borderless'>
              <tbody>
                <% @lost_item_comments.each do |lost_item_comment| %>
                  <tr>
                    <td style="width: 25%"><%= lost_item_comment.member.name %></td>
                    <td><%= lost_item_comment.comment %></td>
                    <td><%= l lost_item_comment.created_at %></td>
                    <td>
                      <!--コメントを論理削除するための処理-->
                      <% if lost_item_comment.is_deleted == true %>
                        <td class="text-danger">削除済み</td>
                      <% else %>
                        <td style="width: 15%">
                          <%= form_with model: LostItemComment.new, url: admin_lost_item_lost_item_comment_path(@lost_item, lost_item_comment), method: :patch, local: true do |f| %>
                            <%= f.hidden_field :is_deleted, :value => true %>
                            <%= button_tag type: "submit", class: 'btn btn-sm' do %>
                              <i class="fa-solid fa-trash"></i>
                            <% end %>
                          <% end %>
                        </td>
                      <% end %>
                      <!--コメントを論理削除するための処理ここまで-->
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!--コメント表示用の記述ここまで-->
        </div>
      </div>
     </div>
  </div>
</div>