<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class="col-3">
      <%= render 'layouts/residence_search', residences: @residences %>
    </div>
    <div class='col-md-9'>
      <div class="row mr-3 mb-3">
        <h2>予約一覧(<%= @residence.name %>)</h2>
        <div class="ml-auto">
          <div>
            <%= link_to "備品予約",residence_search_admin_equipments_path(@residence), class: 'btn btn-sm btn-success' %>&ensp;
            <%= link_to "設備予約",residence_search_admin_facilities_path(@residence), class: 'btn btn-sm btn-success' %>
          </div>
        </div>
      </div>
      <div class="container">
        <div>
          <%= render 'admin/reservations/index', reservations: @reservations %>
        </div>
      </div>
    </div>
  </div>
</div>