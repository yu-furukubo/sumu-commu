<div class='container p-5 px-sm-0'>
  <div class="col-md-6 mx-auto">
    <div class="row mb-3">
      <h2>管理者ログイン</h2>
          <div class="ml-auto mr-3 d-flex align-items-center">
      <%= render "admin/shared/links" %>
    </div>
    </div>
    <div class="mb-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tbody>
            <div class="form-group">
              <tr>
                <td><%= f.label :メールアドレス %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
            </div>
            <div class="form-group">
              <tr>
                <td><%= f.label :パスワード %></td>
                <td>
                  <%= f.password_field :password, autocomplete: "current-password" %>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :ログイン情報を保存 %>
                    </div>
                  <% end %>
                </td>
              </tr>
            </div>
          </tbody>
        </table>
        <div class="row">
          <div class="mx-auto">
            <div class="actions form-group mb-3">
              <%= f.submit "ログイン", class: "btn btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

