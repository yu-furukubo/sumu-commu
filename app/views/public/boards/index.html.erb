<div class='container p-5 px-sm-0'>
    <div class='col-md-9'>
      <div class="row mr-3 mb-3">
        <h2>掲示板一覧</h2>
        <div class="ml-auto">
          <td><%= link_to "掲示板に新しく投稿", new_public_board_path, class: 'btn btn-sm btn-success' %></td>
        </div>
      </div>
      <div class="container">
        <div class="ml-3">
            <%= render 'public/boards/index', boards: @boards %>
        </div>
      </div>
      <h2>あなたの掲示板一覧</h2>
      <div class="container">
        <div class="ml-3">
            <%= render 'public/boards/index', boards: @boards_mine %>
        </div>
      </div>
    </div>
</div>