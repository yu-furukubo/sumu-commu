<% if community.community_members.where(member_id: current_member.id).present? %>
  <%= link_to "退会する", public_community_community_member_path(community, current_member), method: :delete, class: "btn btn-secondary" %>
<% else %>
  <%= link_to "入会する", public_community_community_members_path(community), method: :post, class: "btn btn-success" %>
<% end %>