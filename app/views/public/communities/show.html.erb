<div class='container p-5 px-sm-0'>
  <div class="row ml-5 mb-3">
    <h2>コミュニティ詳細</h2>
    <div class="ml-auto">
      <%= render 'public/communities/join', community: @community %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8 offset-1">
        <div>
          <table class='table table-borderless'>
            <tr><th>作成者名</th><td><%= @community.member.name %></td></tr>
            <tr><th style="width: 20%">コミュニティ名</th><td><%= image_tag @community.get_community_image, width: '50px' %><%= @community.name %></td></tr>
            <tr><th>説明</th><td><%= @community.description %></td></tr>
          </table>
          <% if @community_members.find_by(member_id: current_member.id) && @community_member.is_admin == true %>
            <div class="row">
              <div class="mx-auto">
                <%= link_to "編集する", edit_public_community_path, class: "btn btn-success" %>&emsp;&emsp;
                <%= link_to "削除する", public_community_path, method: :delete,
                  data: {confirm:'本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
              </div>
            </div>
          <% end %>
        </div>
        <!--コメント表示用の記述-->
        <div class="mt-5">
          <div class="row mb-3 d-flex align-items-center">
            <h4>コメント</h4>&emsp;
            <span class="text-primary font-weight-bold"><%= @community_comments.count - @community_comments.where(is_deleted: true).count %>件</span>
          </div>
          <%= form_with model: CommunityComment.new, url: public_community_community_comments_path(@community), method: :post, local: true do |f| %>
            <td>
              <%= f.hidden_field :community_id, :value => @community.id %>
              <%= f.hidden_field :member_id, :value => current_member.id %>
              <%= f.text_area :comment, class: "form-control" %>
              <div class="mt-2 text-center">
                <%= f.submit "コメントする", class: 'btn btn-sm btn-danger' %>
              </div>
            </td>
          <% end %>

          <div class="mt-2">
              <% @community_comments.each do |community_comment| %>
                  <% if community_comment.is_deleted == true %>
                    <% if community_comment.member == current_member %>
                      <div class="text-right">
                        <span class="text-light bg-secondary">このコメントは管理者によって削除されました</span>
                        <div class="text-right">
                          <span class="ml-auto text-secondary mr-2">(<%= community_comment.created_at %></spna>
                          <span class="text-secondary"><%= community_comment.member.name %>)</span>
                        </div>
                      </div>
                    <% else %>
                      <div>
                        <span class="text-light bg-secondary">このコメントは管理者によって削除されました</span>
                        <div>
                          <span class="text-secondary mr-2">(<%= community_comment.created_at %></span>
                          <span class="text-secondary"><%= community_comment.member.name %>)</span>
                        </div>
                      </div>
                    <% end %>
                  <% else %>
                    <% if community_comment.member == current_member %>
                      <div class="text-right">
                        <span class="text-light bg-info"><%= community_comment.comment %></span>
                        <div class="text-right">
                          <span class="ml-auto mr-2">(<%= community_comment.created_at %></span>
                          <span><%= community_comment.member.name %>)</span>
                        </div>
                      </div>
                    <% else %>
                      <div>
                        <span class="text-light bg-info"><%= community_comment.comment %></span>
                        <div>
                          <span class="mr-2">(<%= community_comment.created_at %></spna>
                          <span><%= community_comment.member.name %>)</span>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                  <!--コメントを論理削除するための処理-->
                  <% if @community_members.find_by(member_id: current_member.id) && @community_member.is_admin == true %>
                    <% if community_comment.is_deleted == true %>

                    <% else %>
                      <%= form_with model: CommunityComment.new, url: public_community_community_comment_path(@community, community_comment), method: :patch, local: true do |f| %>
                        <div>
                          <%= f.hidden_field :is_deleted, :value => true %>
                          <%= f.submit "コメントを削除する", class: 'btn btn-sm btn-danger' %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                  <!--コメントを論理削除するための処理ここまで-->
              <% end %>
            </div>
        </div>
        <!--コメント表示用の記述ここまで-->
      </div>
      <!--参加メンバー表示用の記述-->
      <div class="col-3">
        <div class="row mb-3 d-flex align-items-center">
          <h4>参加メンバー</h4>&emsp;
          <%= link_to public_community_community_members_path(@community) do %>
            <span class="text-primary font-weight-bold"><%= @community_members.count %>人</span>
          <% end %>
        </div>
        <table class='table table-borderless table-sm'>
          <tbody>
            <% @community_members.each do |community_member| %>
              <tr>
                <td style="width: 65%"><%= community_member.member.name %></td>
                <% if community_member.is_admin == true %>
                  <td class="text-danger">管理者</td>
                <% else %>
                  <td class="text-success">メンバー</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!--参加メンバー表示用の記述ここまで-->
    </div>
  </div>
</div>