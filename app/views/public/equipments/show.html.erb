<div class='container p-5 px-sm-0'>
  <div class="row ml-5 mb-3">
    <h2>備品詳細</h2>
  </div>
  <div class="container">
    <div class="col-8 offset-1">
      <div>
        <table class='table table-borderless'>
          <tr><th style="width: 20%">備品名</th><td><%= image_tag @equipment.get_equipment_image, width: '50px' %><%= @equipment.name %></td></tr>
          <tr><th>説明</th><td><%= @equipment.description %></td></tr>
          <tr><th>ジャンル</th><td><%= @equipment.genre.name %></td></tr>
          <tr><th>在庫</th><td><%= @equipment.stock %></td></tr>
          <tr><th>保管場所</th><td><%= @equipment.storage_location %></td></tr>
          <tr><th>返却場所</th><td><%= @equipment.return_location %></td></tr>
          <tr><th>注意事項</th><td><%= @equipment.note %></td></tr>
        </table>
        <div class="text-center">
          <%= form_with model: Reservation, url: new_public_reservation_path, method: :get, local: true do |f| %>
            <%= f.hidden_field :equipment_id, :value => @equipment.id %>
            <%= f.submit "予約する", class: 'btn btn-sm btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row ml-5 mb-3">
    <h2>予約一覧</h2>
  </div>
  <div class="ml-3">
    <%= render 'public/reservations/index', reservations: @equipment_reservations %>
  </div>
</div>