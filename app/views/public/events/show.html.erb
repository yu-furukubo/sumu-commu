<div class='container p-5 px-sm-0'>
  <div class="row ml-5 mb-3">
    <h2>イベント詳細</h2>
    <div class="ml-auto">
      <%= render 'public/events/join', event: @event %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8 offset-1">
        <div>
          <table class='table table-borderless'>
            <% if @event.member_id == 0 %>
              <tr><th>作成者名</th><td>管理人</td></tr>
            <% else %>
              <tr><th>作成者名</th><td><%= @event.member.name %></td></tr>
            <% end %>
            <tr><th style="width: 20%">イベント名</th><td><%= @event.name %></td></tr>
            <tr><th>説明</th><td><%= @event.description %></td></tr>
            <tr><th>開催期間</th><td><%= l @event.started_at %> ~ <%= l @event.finished_at %></td></tr>
            <tr><th>開催場所</th><td><%= @event.venue %></td></tr>
          </table>
          <% if @event.member == current_member %>
            <div class="row">
              <div class="mx-auto">
                <%= link_to "編集する", edit_public_event_path, class: "btn btn-success" %>&emsp;&emsp;
                <%= link_to "削除する", public_event_path, method: :delete,
                  data: {confirm:'本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <!--参加メンバー表示用の記述-->
      <div class="col-3">
        <div class="row mb-3 d-flex align-items-center">
          <h4>参加メンバー</h4>&emsp;
          <%= link_to public_event_event_members_path(@event) do %>
            <span class="text-primary font-weight-bold"><%= @event_members.count %>人</span>
          <% end %>
        </div>
        <table class='table table-borderless table-sm'>
          <tbody>
            <% @event_members.each do |event_member| %>
              <tr>
                <td style="width: 65%"><%= event_member.member.name %></td>
                <% if @event.member == current_member %>
                  <td class="text-danger">ホスト</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex align-items-center">
          <p>(招待中メンバー)</hp>
        </div>
        <table class='table table-borderless table-sm'>
          <tbody>
            <% @event_invited_members.each do |event_invited_member| %>
              <tr>
                <td style="width: 65%"><%= event_invited_member.member.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <!--参加メンバー表示用の記述ここまで-->
    </div>
  </div>
</div>