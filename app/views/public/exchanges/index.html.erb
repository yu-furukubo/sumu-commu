<div class='container p-5 px-sm-0'>
  <div class='col-md-12'>
    <div class="row mr-3 mb-3">
      <h2>ゆずりあい一覧</h2>
      <div class="ml-auto mr-3">
        <%= link_to "ゆずりあいを登録する", new_exchange_path, class: 'btn btn-success' %>
      </div>
    </div>
    <div class="ml-3">
      <div class="tabs">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#section1">募集中</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section2">募集終了</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section3">あなたのゆずりあい</a>
          </li>
        </ul>

        <div class="tab-content">
          <div id="section1" class="tab-pane fade show active">
            <%= render 'public/exchanges/index', exchanges: @exchanges_recruitment %>
          </div>
          <div id="section2" class="tab-pane fade">
            <%= render 'public/exchanges/index', exchanges: @exchanges_finished %>
          </div>
          <div id="section3" class="tab-pane fade">
            <%= render 'public/exchanges/index', exchanges: @exchanges_mine %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>