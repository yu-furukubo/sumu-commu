<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="ml-5 mb-3">
        <h2>会員情報</h2>
      </div>
      <div class="container">
        <div class="row">
          <div class="offset-1">
            <table class='table table-borderless'>
              <tr><th>氏名</th><td><%= @member.name %></td></tr>
              <tr><th>住所</th><td><%= @member.residence.address + " " + @member.residence.name + @member.house_address %></td></tr>
              <tr><th>メールアドレス</th><td><%= @member.email %></td></tr>
            </table>
            <div>
              <%= link_to "編集する", public_edit_member_information_path, class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
     </div>
  </div>