<div class='container p-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="row ml-5 mb-3">
        <h2>会員情報</h2>
      </div>
      <div class="container">
        <div class="row">
          <div class="offset-1">
            <table class='table table-borderless'>
              <tr><th>画像</th><td><%= image_tag @member.get_profile_image, width: "150px", class: "profile_image_150" %></td></tr>
              <tr><th>氏名</th><td><%= @member.name %></td></tr>
              <% if current_member.residence.housing_type == Residence.housing_types.key(0) %>
                <tr><th>住所</th><td><%= @member.residence.address + " " + @member.residence.name + @member.house_address %></td></tr>
              <% else %>
                <tr><th>住所</th><td><%= @member.residence.address + "-" + @member.house_address %></td></tr>
              <% end %>
              <tr><th>メールアドレス</th><td><%= @member.email %></td></tr>
            </table>
            <div>
              <% if @member.email != "guest@example.com" %>
                <%= link_to "編集する", edit_member_registration_path, class: "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
     </div>
  </div>
</div>